/* === DASHBOARD PREMIUM === */
@import '../styles/variables.premium.css';

.dashboard-premium {
  min-height: 100vh;
  background: var(--color-bg-primary);
  font-family: var(--font-primary);
}

/* === MAIN AREA === */
.dashboard-main {
  margin-left: var(--sidebar-width);
  transition: margin-left var(--transition-normal);
}

.dashboard-premium.sidebar-collapsed .dashboard-main {
  margin-left: var(--sidebar-collapsed-width);
}

.dashboard-content {
  margin-top: var(--topbar-height);
  padding: var(--spacing-2xl);
  min-height: calc(100vh - var(--topbar-height));
}

.content-wrapper {
  max-width: 1600px;
  margin: 0 auto;
}

/* === LOADING === */
.dashboard-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: var(--color-bg-primary);
  gap: var(--spacing-lg);
  color: var(--color-text-primary);
}

.loading-spinner {
  width: 48px;
  height: 48px;
  border: 4px solid var(--color-border);
  border-top-color: var(--color-neon-blue);
  border-radius: var(--radius-full);
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* === WELCOME BANNER === */
.welcome-banner {
  background: var(--gradient-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-2xl);
  padding: var(--spacing-2xl);
  margin-bottom: var(--spacing-2xl);
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--spacing-xl);
  position: relative;
  overflow: hidden;
}

.welcome-banner::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400px;
  height: 400px;
  background: var(--gradient-glow);
  border-radius: var(--radius-full);
  pointer-events: none;
}

.banner-content {
  flex: 1;
  position: relative;
  z-index: 1;
}

.banner-title {
  font-size: 2rem;
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-sm);
  line-height: 1.2;
}

.banner-subtitle {
  font-size: 1.125rem;
  color: var(--color-text-secondary);
}

.banner-stats {
  display: flex;
  gap: var(--spacing-xl);
  position: relative;
  z-index: 1;
}

.quick-stat {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-lg);
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  min-width: 140px;
}

.quick-stat .stat-icon {
  font-size: 2rem;
}

.quick-stat .stat-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--color-text-primary);
  line-height: 1;
  margin-bottom: 4px;
}

.quick-stat .stat-label {
  font-size: 0.75rem;
  color: var(--color-text-tertiary);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* === FOOTER === */
.dashboard-footer {
  margin-top: var(--spacing-3xl);
  padding: var(--spacing-2xl) 0;
  border-top: 1px solid var(--color-border);
}

.footer-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.footer-left {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.footer-logo {
  font-size: 1.25rem;
  font-weight: 700;
}

.footer-tagline {
  font-size: 0.875rem;
  color: var(--color-text-tertiary);
}

.footer-right {
  display: flex;
  gap: var(--spacing-xl);
}

.footer-link {
  font-size: 0.875rem;
  color: var(--color-text-secondary);
  text-decoration: none;
  transition: color var(--transition-fast);
}

.footer-link:hover {
  color: var(--color-neon-blue);
}

.footer-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: var(--spacing-lg);
  border-top: 1px solid var(--color-border);
}

.footer-copyright,
.footer-version {
  font-size: 0.8125rem;
  color: var(--color-text-tertiary);
}

/* === RESPONSIVE === */
@media (max-width: 1024px) {
  .banner-stats {
    display: none;
  }
}

@media (max-width: 768px) {
  .dashboard-main {
    margin-left: 0;
  }
  
  .dashboard-content {
    padding: var(--spacing-lg);
  }
  
  .welcome-banner {
    padding: var(--spacing-lg);
  }
  
  .banner-title {
    font-size: 1.5rem;
  }
  
  .banner-subtitle {
    font-size: 1rem;
  }
  
  .footer-content {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-lg);
  }
  
  .footer-right {
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }
  
  .footer-bottom {
    flex-direction: column;
    gap: var(--spacing-sm);
    align-items: flex-start;
  }
}
