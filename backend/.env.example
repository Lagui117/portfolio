# ========================================
# PredictWise Backend - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Flask Configuration
FLASK_APP=app.main:create_app
FLASK_ENV=development
DEBUG=True

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=change-this-secret-key-in-production
JWT_SECRET_KEY=change-this-jwt-secret-key-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Database
DATABASE_URL=sqlite:///predictwise.db
# For PostgreSQL: postgresql://user:password@localhost:5432/predictwise
# For MySQL: mysql://user:password@localhost:3306/predictwise

# CORS (Comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# External APIs
# ========================================

# OpenAI API (REQUIRED for GPT analysis)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Sports API (OPTIONAL - uses mock data if not provided)
# Option 1: API-FOOTBALL via RapidAPI
# Get your key at: https://rapidapi.com/api-sports/api/api-football
SPORTS_API_KEY=
SPORTS_API_HOST=api-football-v1.p.rapidapi.com
USE_MOCK_SPORTS_API=true

# Finance API (OPTIONAL - uses yfinance by default)
FINANCE_API_KEY=
USE_MOCK_FINANCE_API=false

# ========================================
# ML Model Configuration
# ========================================
ML_MODELS_PATH=../ml/models

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO

# ========================================
# Development Options
# ========================================
USE_MOCK_DATA=false
